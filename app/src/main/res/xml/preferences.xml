<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:edittextpreference="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="@string/pref_monitor_category">
        <SwitchPreference
            android:title="@string/pref_monitor_bg_unit_title"
            android:disableDependentsState="false"
            android:key="@string/key_mmolxl"
            android:defaultValue="@bool/default_mmolxl"
            android:summaryOff="@string/pref_monitor_bg_unit_summary_off"
            android:summaryOn="@string/pref_monitor_bg_unit_summary_on"
            android:switchTextOff="@string/glucose_mgdl"
            android:switchTextOn="@string/glucose_mmol" />
        <SwitchPreference
            android:title="@string/pref_monitor_decimals_title"
            android:dependency="mmolxl"
            android:key="@string/key_mmolDecimals"
            android:defaultValue="@bool/default_mmolDecimals"
            android:summaryOff="@string/pref_monitor_decimals_summary_off"
            android:summaryOn="@string/pref_monitor_decimals_summary_on"
            android:switchTextOff="1"
            android:switchTextOn="2" />
        <info.nightscout.android.utils.ListPreference
            android:title="@string/pref_monitor_poll_interval_title"
            android:key="@string/key_pollInterval"
            android:defaultValue="@string/default_pollInterval"
            android:entries="@array/poll_interval"
            android:entryValues="@array/poll_interval_values"
            android:summary="%s" />
        <info.nightscout.android.utils.ListPreference
            android:title="@string/pref_monitor_low_battery_poll_interval_title"
            android:key="@string/key_lowBatPollInterval"
            android:defaultValue="@string/default_lowBatPollInterval"
            android:summary="%s"
            android:entries="@array/poll_interval"
            android:entryValues="@array/poll_interval_values"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_display_category">
        <info.nightscout.android.utils.ListPreference
            android:title="@string/pref_chart_zoom_title"
            android:key="@string/key_chartZoom"
            android:defaultValue="@string/default_chartZoom"
            android:summary="%s"
            android:entries="@array/chart_zoom"
            android:entryValues="@array/chart_zoom_values"/>
        <ListPreference
            android:title="@string/pref_screen_sleep_title"
            android:key="@string/key_screenSleep"
            android:defaultValue="@string/default_screenSleep"
            android:summary="%s"
            android:entries="@array/screen_sleep"
            android:entryValues="@array/screen_sleep_values"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_sharing_category">
        <CheckBoxPreference
            android:title="@string/pref_send_to_nightscout_title"
            android:disableDependentsState="false"
            android:key="@string/key_EnableRESTUpload"
            android:defaultValue="@bool/default_EnableRESTUpload"
            android:summary="@string/pref_send_to_nightscout_summary" />
        <info.nightscout.android.utils.EditTextPreference
            edittextpreference:mode="url"
            edittextpreference:maxCharacters="200"
            android:title="@string/pref_url_title"
            android:key="@string/key_nightscoutURL"
            android:defaultValue="@string/default_nightscoutURL"
            android:dependency="@string/key_EnableRESTUpload"
            android:dialogMessage="@string/pref_url_dialog_message"
            android:dialogTitle="@string/pref_url_dialog_title"/>
        <info.nightscout.android.utils.EditTextPreference
            edittextpreference:mode="secret"
            edittextpreference:minCharacters="12"
            edittextpreference:maxCharacters="30"
            android:title="@string/pref_secret_title"
            android:key="@string/key_nightscoutSECRET"
            android:defaultValue="@string/default_nightscoutSECRET"
            android:dependency="@string/key_EnableRESTUpload"
            android:dialogMessage="@string/pref_secret_dialog_message"
            android:dialogTitle="@string/pref_secret_dialog_title" />
        <Preference
            android:fragment="info.nightscout.android.settings.SettingsNightscoutFragment"
            android:title="@string/pref_ns_advanced_nightscout_settings_category"
            android:dependency="@string/key_EnableRESTUpload"/>
<!--
        <Preference
            android:title="@string/pref_scan_qr_code_title"
            android:key="@string/key_scanButton"
            android:dependency="@string/key_EnableRESTUpload"
            android:summary="@string/pref_scan_qr_code_summary"/>
-->
        <CheckBoxPreference
            android:title="@string/pref_send_to_xdrip_title"
            android:key="@string/key_enableXdripPlusUpload"
            android:defaultValue="@bool/default_enableXdripPlusUpload"
            android:summary="@string/pref_send_to_xdrip_summary" />
        <Preference
            android:fragment="info.nightscout.android.settings.SettingsUrchinFragment"
            android:title="@string/pref_urchin_title"
            android:summary="@string/pref_urchin_summary"/>
        <Preference
            android:fragment="info.nightscout.android.settings.SettingsPushoverFragment"
            android:title="@string/pref_pushover_category"
            android:summary="@string/pref_pushover_summary"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_system_category">
        <Preference
            android:fragment="info.nightscout.android.settings.SettingsSystemFragment"
            android:title="@string/pref_advanced_system_settings_category"/>
        <Preference
            android:fragment="info.nightscout.android.settings.SettingsDebugFragment"
            android:title="@string/pref_debug_settings_category"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_disclaimer_category">
        <SwitchPreference
            android:title="@string/pref_disclaimer_title"
            android:disableDependentsState="false"
            android:key="@string/key_eulaAccepted"
            android:defaultValue="@bool/default_eulaAccepted"
            android:summaryOff="@string/pref_disclaimer_summary"
            android:summaryOn="@string/pref_disclaimer_summary"
            android:switchTextOff="@string/NO"
            android:switchTextOn="@string/YES" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_app_version_category">
        <!--suppress AndroidDomInspection -->
        <Preference
            android:title="@string/versionName"
            android:key="@string/key_version" />
    </PreferenceCategory>

</PreferenceScreen>