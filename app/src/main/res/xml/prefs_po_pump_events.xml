<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Pump Events">
        <Preference
            android:selectable="false"
            android:summary="@string/pref_pushover_pump_events_summary"/>
        <Preference
            android:title="@string/pref_pushover_message_priority_selection_title"
            android:selectable="false"
            android:summary="@string/pref_pushover_message_priority_summary"/>
        <Preference
            android:title="Preview sounds"
            android:summary="@string/pref_pushover_preview_sounds_summary">
            <intent android:action="android.intent.action.VIEW"
                android:data="https://pushover.net/api#sounds" />
        </Preference>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_pushover_bolus_category">
        <CheckBoxPreference
            android:title="@string/pref_pushover_send_message_title"
            android:key="@string/key_pushoverEnableBolus"
            android:defaultValue="@bool/default_pushoverEnableBolus"/>
        <ListPreference
            android:title="@string/pref_pushover_priority_title"
            android:dependency="@string/key_pushoverEnableBolus"
            android:key="@string/key_pushoverPriorityBolus"
            android:defaultValue="@string/default_pushoverPriorityBolus"
            android:summary="%s"
            android:entries="@array/pushover_priority"
            android:entryValues="@array/pushover_priority_values"/>
        <ListPreference
            android:title="@string/pref_pushover_sound_title"
            android:dependency="@string/key_pushoverEnableBolus"
            android:key="@string/key_pushoverSoundBolus"
            android:defaultValue="@string/default_pushoverSoundBolus"
            android:summary="%s"
            android:entries="@array/pushover_sound"
            android:entryValues="@array/pushover_sound_values"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_pushover_basal_category">
