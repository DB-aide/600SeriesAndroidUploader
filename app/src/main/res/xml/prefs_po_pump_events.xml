            android:key="@string/key_pushoverSoundBasal"
            android:defaultValue="@string/default_pushoverSoundBasal"
            android:summary="%s"
            android:entries="@array/pushover_sound"
            android:entryValues="@array/pushover_sound_values"/>
    </PreferenceCategory>
